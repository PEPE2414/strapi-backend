{
  "kind": "collectionType",
  "collectionName": "up_users",
  "info": {
    "name": "user",
    "description": "",
    "singularName": "user",
    "pluralName": "users",
    "displayName": "User"
  },
  "options": { "draftAndPublish": false },
  "pluginOptions": {},
  "attributes": {
    "username": {
      "type": "string",
      "minLength": 3,
      "unique": true,
      "configurable": false,
      "required": true
    },
    "email": {
      "type": "email",
      "minLength": 6,
      "configurable": false,
      "required": true
    },
    "provider": { "type": "string", "configurable": false },
    "password": {
      "type": "password",
      "minLength": 6,
      "configurable": false,
      "private": true,
      "searchable": false
    },
    "resetPasswordToken": {
      "type": "string",
      "configurable": false,
      "private": true,
      "searchable": false
    },
    "confirmationToken": {
      "type": "string",
      "configurable": false,
      "private": true,
      "searchable": false
    },
    "confirmed": { "type": "boolean", "default": false, "configurable": false },
    "blocked": { "type": "boolean", "default": false, "configurable": false },
    "role": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.role",
      "inversedBy": "users",
      "configurable": false
    },
    "jobPrefs": { "type": "json", "default": null },
    "preferredName": { "type": "string" },
    "university": { "type": "string" },
    "studyField": { "type": "string" },
    "course": { "type": "string" },
    "keyStats": { "type": "json" },
    "plan": { "type": "string" },
    "packages": { "type": "json", "default": [] },
    "addons": { "type": "json", "default": [] },
    "weeklyGoal": { "type": "integer", "default": 12 },

    "coverLetters": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::cover-letter.cover-letter",
      "mappedBy": "user"
    },
    
    "coverLetterPoints": { "type": "json", "default": [] },
    
    "cvFile": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["files"],
      "required": false
    },
    "cvText": { "type": "text" },
    "outreachEmails": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::outreach-email.outreach-email",
      "mappedBy": "user"
    },
    
    /* if you keep outreachExample, make sure it is CLOSED properly */
    "outreachExample": {
      "type": "json",
      "default": {
        "recruiter": { "email": "", "confidence": null, "message": "…" },
        "manager":   { "email": "", "confidence": null, "message": "…" }
      }
    },

    /* ✅ new credits (OUTSIDE outreachExample) */
    "coverLetterCredits": { "type": "integer", "default": 0 },
    "emailCredits": { "type": "integer", "default": 0 },
    "interviewQuestionCredits": { "type": "integer", "default": 0 },
    "mockInterviewMinutes": { "type": "integer", "default": 0 },

    /* ✅ reverse relation for logs */
    "usageLogs": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::usage-log.usage-log",
      "mappedBy": "user"
    }
  }
}
