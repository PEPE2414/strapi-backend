{
  "collectionName": "saved_jobs",
  "info": {
    "singularName": "saved-job",
    "pluralName": "saved-jobs",
    "displayName": "Saved Job",
    "description": "User-saved jobs denormalised from Job Library"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "content-manager": { "visible": true },
    "content-type-builder": { "visible": true }
  },
  "attributes": {
    "jobId": { "type": "string", "required": true },
    "title": { "type": "string", "required": true },
    "company": { "type": "string", "required": true },
    "link": { "type": "string" },
    "deadline": { "type": "date" },
    "description": { "type": "text" },
    "location": { "type": "string" },
    "salary": { "type": "string" },
    "jobType": { "type": "string" },
    "applyUrl": { "type": "string" },
    "startDate": { "type": "date" },
    "endDate": { "type": "date" },
    "relatedDegree": { "type": "string" },
    "companyPage": { "type": "string" },
    "degreeLevel": { "type": "string" },
    "experience": { "type": "string" },
    "duration": { "type": "string" },
    "owner": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "required": true
    }
  }
}
