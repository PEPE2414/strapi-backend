{
  "kind": "collectionType",
  "collectionName": "jobs",
  "info": { "singularName": "job", "pluralName": "jobs", "displayName": "Job" },
  "options": { "draftAndPublish": false },
  "attributes": {
    "source": { "type": "string", "required": true },
    "sourceUrl": { "type": "text" },
    "title": { "type": "string", "required": true },
    "company": { "type": "json", "required": false, "default": { "name": "Unknown" } },
    "companyLogo": { 
      "type": "media", 
      "multiple": false, 
      "allowedTypes": ["images"] 
    },
    "location": { "type": "string" },
    "descriptionHtml": { "type": "richtext" },
    "descriptionText": { "type": "text" },
    "applyUrl": { "type": "text", "required": true },
    "jobType": { "type": "enumeration", "enum": ["internship","placement","graduate","other"], "required": true },
    "industry": {
      "type": "enumeration",
      "enum": [
        "Accounting & Finance",
        "Aerospace & Defence",
        "Agriculture & Farming",
        "Architecture",
        "Automotive",
        "Banking & Investment",
        "Biotechnology",
        "Chemical Engineering",
        "Civil Engineering",
        "Consulting",
        "Construction",
        "Creative & Design",
        "Cybersecurity",
        "Data Science & Analytics",
        "Education & Training",
        "Electrical Engineering",
        "Energy & Utilities",
        "Engineering (General)",
        "Entertainment & Media",
        "Environmental",
        "Fashion & Textiles",
        "Food & Beverage",
        "Government & Public Sector",
        "Healthcare & Medical",
        "Hospitality & Tourism",
        "HR & Recruitment",
        "Insurance",
        "IT & Software",
        "Law & Legal",
        "Logistics & Supply Chain",
        "Manufacturing",
        "Marketing & Advertising",
        "Mechanical Engineering",
        "Mining & Resources",
        "Non-Profit & Charity",
        "Oil & Gas",
        "Pharmaceuticals",
        "Property & Real Estate",
        "Retail",
        "Sales",
        "Science & Research",
        "Social Care",
        "Sports & Fitness",
        "Technology",
        "Telecommunications",
        "Transport",
        "Water & Waste Management"
      ]
    },
    "startDate": { "type": "datetime" },
    "endDate": { "type": "datetime" },
    "duration": { "type": "string" },
    "experience": { "type": "string" },
    "companyPageUrl": { "type": "text" },
    "remotePolicy": { "type": "enumeration", "enum": ["on-site", "hybrid", "remote-uk", "remote-anywhere"] },
    "applyDeadline": { "type": "datetime" },
    "salary": { "type": "json" },
    "relatedDegree": { "type": "json" },
    "degreeLevel": { "type": "json" },
    "postedAt": { "type": "datetime" },
    "slug": { "type": "uid", "targetField": "title", "required": true, "unique": true },
    "hash": { "type": "string", "required": true, "unique": true },
    "qualityScore": { "type": "integer", "min": 0, "max": 100 },
    "lastValidated": { "type": "datetime" },
    "isExpired": { "type": "boolean", "default": false },
    "lastCheckedAt": { "type": "datetime" }
  }
}
